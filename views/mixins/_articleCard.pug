mixin articleCard(article={})
	br
	section.section.extra-margins.pb-3.text-center.text-lg-left
		// Section heading
		.row
			// Grid column
			.col-lg-4.mb-4
				// Featured image
				.view.overlay.hm-white-slight.z-depth-1-half
					img.img-fluid(src=`/uploads/${article.photo || 'article.jpeg'} `, alt='First sample image')
					a(href=`/article/${article.slug}`)
						.mask

			.col-lg-7.ml-xl-4.mb-4
				// Excerpt

				each tag in article.tags
					.chip.pb-1.red-text
						i.fa.fa-university
						strong  #{tag} 
				h4.mb-3(style="word-wrap: break-word")
					strong #{article.name}
				p(style="word-wrap: break-word")
					| #{article.description}

				a.btn.btn-primary.btn-lg(href=`/article/${article.slug}`) Read more
			


				if user && user.authLevel==1
					a.btn.btn-warning.btn-lg(href=`/${article._id}/edit`) Admin edit

				else if user && article.author.equals(user._id)
					a.btn.btn-warning.btn-lg(href=`/${article._id}/edit`) edit
				

			// Grid column
		// Grid row
		hr.mb-5






			
