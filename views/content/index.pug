              // Image
              h6.red-text
                strong  Liberal 
              .view.overlay.hm-white-slight.z-depth-1-half
                img.img-fluid(src=`/uploads/${liberal.photo || 'article.jpeg'} `, alt='First sample image')
                a(href=`/article/${liberal.slug}`)
                  .mask
              a(href=`/article/${liberal.slug}`)
                strong #{liberal.name}
                i.fa.fa-angle-right
            // /Featured news
            // Small news
            
          - const democrats = liberalBottom.slice(1,5)
          each liberal in democrats
            .single-news
              a(href=`/article/${liberal.slug}`) #{liberal.name}
                i.fa.fa-angle-right
            
        .col-lg-4.col-md-6.mb-r
          // Featured news

          - const republicansOne = republicanBottom.slice(0,1)
          each republican in republicansOne
