extends ../navigation/layout
include ../mixins/_carouselPt1
include ../mixins/_carouselPt2
include ../mixins/_subCarouselOne

block content
  // Carousel Wrapper
  #carousel-example-2.carousel.slide.carousel-fade(data-ride='carousel')
    // Indicators
    ol.carousel-indicators
      li.active(data-target='#carousel-example-2', data-slide-to='0')
      li(data-target='#carousel-example-2', data-slide-to='1')
      li(data-target='#carousel-example-2', data-slide-to='2')
      li(data-target='#carousel-example-2', data-slide-to='3')

    // /.Indicators
    // Slides
    
    -const itemCarouselOne = carousel.slice(0,1)
    .carousel-inner(role='listbox')
      .carousel-item.active
        each carouselItem in itemCarouselOne
          +carouselOne(carouselItem)
      
      -const itemCarouselTwoThree = carousel.slice(1,3)
      each carouselItem in itemCarouselTwoThree 
        +carousel(carouselItem)

    // /.Slides
    // Controls
    a.carousel-control-prev(href='#carousel-example-2', role='button', data-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.sr-only Previous
    a.carousel-control-next(href='#carousel-example-2', role='button', data-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.sr-only Next
    // /.Controls
  // /.Carousel Wrapper
  .container
    section.section.magazine-section
      br
      // Grid row
      .row.text-left
        // Grid column


        .col-lg-6.col-md-12
          // Featured news
          .single-news
            // Image
            if mainFeature && mainFeature.length
              .view.overlay.hm-white-slight.z-depth-1-half
                  img.img-fluid(src=`/uploads/${mainFeature[0].photo || 'article.jpeg'}`, alt='Wider sample post image')
                  a(href=`/article/${mainFeature[0].slug}`)
                    .mask
            if mainFeature && mainFeature.length
              .news-data
                a.deep-black-text(href=`/article/${mainFeature[0].slug}`) #{mainFeature[0].name}
                p
                  strong
                    i.fa.fa-clock-o #{mainFeature[0].created}
                p(align='justify') #{mainFeature[0].description}
          // /Featured news
        // Grid column
        // Grid column
        .col-lg-6.col-md-12(style="padding-left:30px")
          // Small news

          each sideFeature in mainFeatureSide
            .single-news
              .row
                .col-md-3
                  // Image
                  .view.overlay.hm-white-slight.z-depth-1-half
                    img.img-fluid(src=`/uploads/${sideFeature.photo || 'article.jpeg'}`, alt='Minor sample post image')
                    a(href=`/article/${sideFeature.slug}`)
                      .mask
                // Excerpt
                .col-md-9
                  p
                    strong #{sideFeature.created}
                  a(href=`/article/${sideFeature.slug}`)
                    | #{sideFeature.description}
                    i.fa.fa-angle-right      
          // /Small news
          // Small news
          

  // Carousel Wrapper
  #multi-item-example.carousel.slide.carousel-multi-item(data-ride='carousel')
    // Controls
    .controls-top
      a.btn-floating(href='#multi-item-example', data-slide='prev')
        i.fa.fa-chevron-left
      a.btn-floating(href='#multi-item-example', data-slide='next')
        i.fa.fa-chevron-right
    // /.Controls
    // Indicators
    ol.carousel-indicators
      li.active(data-target='#multi-item-example', data-slide-to='0')
      li(data-target='#multi-item-example', data-slide-to='1')
      li(data-target='#multi-item-example', data-slide-to='2')
    // /.Indicators
    // Slides
    .carousel-inner(role='listbox')
      // First slide

      .carousel-item.active
        - const first = subCarousel.slice(0,3)
        each item in first
          +subCarouselOne(item)
      // /.First slide
      // Second slide
      .carousel-item
        - const second = subCarousel.slice(3,6)
        each item in second
          +subCarouselOne(item)
        
      .carousel-item
        - const third = subCarousel.slice(6,9)
        each item in third
          +subCarouselOne(item)

  .container
