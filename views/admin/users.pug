extends ../navigation/layout


block content
	br
	br
	.container
		table.table
			// Table head
			thead.blue-grey.lighten-4
				tr
					th #
					th User
					th Auth Level
					th Remove
			// Table head
			// Table body
			tbody
				each user, index in users
					tr
						th(scope='row') #{ 1 + index}
						td #{user.name}
						if user && user.authLevel
							td #{user.authLevel}
						td
							form(action=`/delete/user/${user._id || ''}?_method=DELETE` method="POST" enctype="multipart/form-data")
										input.btn.btn-danger.btn-lg(type="submit" value="delete" class="button" id="test_delete")