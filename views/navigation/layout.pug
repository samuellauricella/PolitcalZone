doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/cards-style.css')
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous")
    meta(name="viewport" content="width=device-width, initial-scale=1")

  body
    //- ////////////////////////// Navbar Version

    nav.navbar.navbar-expand-lg.navbar-light.bg-light#nav
      a.navbar-brand(href="/")
        img.d-inline-block.align-top(src="https://yt3.ggpht.com/-BySj78ptttg/AAAAAAAAAAI/AAAAAAAAAAA/-xCE-EuTpnQ/s900-c-k-no/photo.jpg" width='40' height='40')
        span#title The Political
        span#titleTwo Zone
      button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportContent" aria-controls="navbarSupportContent" aria-expanded="false" aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarSupportContent
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/articles") Articles
              //- i.fa.fa-newspaper-o#articleIcon
          li.nav-item
            a.nav-link(href="/add") Add Article
        ul.nav.justify-content-right
          li.nav-item
            a.nav-link(href="/") Sign in
          li.nav-item
            a.nav-link(href="/add") Sign up



    block messages
    if locals.flashes
      .inner
        .flash-messages
          - const categories = Object.keys(locals.flashes)
          each category in categories
            each message in flashes[category]
              .flash.row(class=`alert alert-${category}`)
                p.col!= message
                button.btn.btn-light.col-1(onClick="this.parentElement.remove()") &times;

    block content
    
    footer.footer
      .container(id="footer")
        span.text-muted Place sticky footer here

  script


