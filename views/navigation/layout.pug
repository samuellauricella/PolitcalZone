doctype html
html(class="full-height")
  head
    title= title
    link(rel='stylesheet' href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel='stylesheet' href="/css/bootstrap/bootstrap.min.css")
    link(rel='stylesheet' href="/css/mdBootstrap/mdb.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/_article.css')
    link(rel='stylesheet', href='/stylesheets/_commentForm.css')
    link(rel='stylesheet', href='/stylesheets/tag.css')
    link(rel='stylesheet', type='text/css', href='/javascripts/trix/trix.css')
    script(src="https://unpkg.com/vue")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/vuejs-paginator/2.0.2/vuejs-paginator.js")

    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    include ../mixins/_loginForm

  body(style="background-color: #233A56")

    nav.navbar.navbar-expand-lg.navbar-light.fixed-top.scrolling-navbar
      a.navbar-brand(href='/')
        img(src="https://yt3.ggpht.com/-BySj78ptttg/AAAAAAAAAAI/AAAAAAAAAAA/-xCE-EuTpnQ/s900-c-k-no/photo.jpg" width='40' height='40')
        span#title The Political
        span#titleTwo Zone
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent-7',aria-controls='navbarSupportedContent-7', aria-expanded='false', aria-label='Toggle navigation')
        span
          i.fa.fa-bars
      #navbarSupportedContent-7.collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href='/articles')
              | Articles 
              span.sr-only (current)
          if user && user.authLevel <=2
            li.nav-item
              a.nav-link(href='/add') Add Article
          form.form-inline.waves-effect.waves-light(style="color:black !important")
            input.form-control.mr-sm-2(type='text', id="search" placeholder="Search" style="color: black !important")

        ul.nav.justify-content-right
          if user
            li.dropdown(style="padding-right:30px")
              button#dropdownMenuButtonbtn.btn.btn-outline-info(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                | Settings
              .dropdown-menu(aria-labelledby='dropdownMenuButton')
                .d-flex.justify-content-center
                  a.accounts(href="/account")
                    img.rounded-circle.img-responsive(src=user.gravatar style="width: 60px; height: auto")
                hr
                if user && user.authLevel ==1
                  .d-flex.justify-content-center
                    a.btn.btn-mdb.btn-lg(href='/admin') Admin Page
                hr
                .d-flex.justify-content-center
                  a.btn.btn-danger.btn-lg(href="/logout") Logout
              
          else
            li.nav-item
              a.nav-link(data-toggle="modal" data-target=".bd-example-modal-lg") Sign in
            li.nav-item
              a.nav-link(href="/register" style="color:black") Register



    .modal.fade.bd-example-modal-lg(tabindex="-1" role="dialog")
      .modal-dialog.modal-lg
        .modal-content
          +loginForm()
    
    br
    br
    br
    br

    
    block messages
    if locals.flashes
      .inner
        .flash-messages
          - const categories = Object.keys(locals.flashes)
          each category in categories
            each message in flashes[category]
                .row.card(class=`alert alert-${category}`)
                    h2(style="color:black !important; font-family: Bangers; text-align:center")!= message  
                    button.btn.btn-danger.animated.pulse.infinite(onClick="this.parentElement.remove()") &times;
     

    block content



    // Footer
  footer.page-footer.center-on-small-only.pt-0(style="background-color:#FFFFFF")
    // Footer Links
    .container
      // First row
      .row
        // First column
        .col-md-12
          .footer-socials.mb-5.flex-center
            // Facebook
            a.icons-sm.fb-ic
              i.fa.fa-facebook.fa-lg.black-text.mr-md-4  
            // Twitter
            a.icons-sm.tw-ic
              i.fa.fa-twitter.fa-lg.black-text.mr-md-4  
            // Instagram
            a.icons-sm.ins-ic
              i.fa.fa-instagram.fa-lg.black-text.mr-md-4  


    .footer-copyright(style="background-color:grey")
      .container-fluid
        | Â© 2017 Copyright: 
        a(href='/')  The Political Zone
  script
    script.
      new WOW().init();    
    script(type="text/javascript" src="/javascripts/mdBootstrap/jquery-3.2.1.js")
    script(type="text/javascript" src="/javascripts/mdBootstrap/popper.min.js")
    script(type="text/javascript" src="/javascripts/bootstrap/bootstrap.min.js")
    script(src="https://use.fontawesome.com/444917fc3e.js")
    script(type="text/javascript" src="/javascripts/mdBootstrap/mdb.min.js")
    script(type='text/javascript', src='/javascripts/trix/trix.js')
    script(type='text/javascript', src='/javascripts/custom/custom.js')





    


